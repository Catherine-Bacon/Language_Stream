// --- File start: manifest.json ---
{
  "name": "Language Stream",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "main.html",
    "default_icon": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "storage", "activeTab", "tabs", "webRequest"],
  "host_permissions": ["*://*.netflix.com/*", "https://*.nflxvideo.net/*"], 
  "web_accessible_resources": [
    {
      "resources": ["inpage.js"],
      "matches": ["*://*.netflix.com/*"]
    }
  ]
}